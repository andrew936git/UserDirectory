<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_dynamic_primary40"
        android:layout_marginTop="@dimen/_40dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints,UselessLeaf">

        <EditText
            android:id="@+id/editTextNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHintName"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editTextAgeET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/editTextHintAge"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveButtonBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonText"
        android:backgroundTint="@color/material_dynamic_primary40"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_10dp"
        tools:ignore="RtlHardcoded" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"/>

</LinearLayout>